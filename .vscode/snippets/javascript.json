{
    "React Component": {
        "prefix": "react-component",
        "body": [
            "import React${1|, { useState, useEffect }|} from 'react';",
            "",
            "const ${2:ComponentName} = (${3:props}) => {",
            "    ${4:// Component logic}",
            "    ",
            "    return (",
            "        <div className=\"${5:container-class}\">",
            "            ${6:// JSX content}",
            "        </div>",
            "    );",
            "};",
            "",
            "export default ${2:ComponentName};"
        ],
        "description": "React functional component template"
    },
    "API Call Hook": {
        "prefix": "api-hook",
        "body": [
            "const use${1:ApiName} = () => {",
            "    const [data, setData] = useState(null);",
            "    const [loading, setLoading] = useState(false);",
            "    const [error, setError] = useState(null);",
            "",
            "    const ${2:fetchData} = async (${3:params}) => {",
            "        setLoading(true);",
            "        setError(null);",
            "        try {",
            "            const response = await fetch(`${4:API_URL}`, {",
            "                method: '${5|GET,POST,PUT,DELETE|}',",
            "                headers: {",
            "                    'Content-Type': 'application/json',",
            "                },",
            "                body: JSON.stringify(${3:params})",
            "            });",
            "            const result = await response.json();",
            "            setData(result);",
            "        } catch (err) {",
            "            setError(err.message);",
            "        } finally {",
            "            setLoading(false);",
            "        }",
            "    };",
            "",
            "    return { data, loading, error, ${2:fetchData} };",
            "};"
        ],
        "description": "Custom hook for API calls"
    },
    "Form Component": {
        "prefix": "form-component",
        "body": [
            "const ${1:FormName} = () => {",
            "    const [formData, setFormData] = useState({",
            "        ${2:// form fields}",
            "    });",
            "",
            "    const handleChange = (e) => {",
            "        setFormData({",
            "            ...formData,",
            "            [e.target.name]: e.target.value",
            "        });",
            "    };",
            "",
            "    const handleSubmit = async (e) => {",
            "        e.preventDefault();",
            "        ${3:// Handle form submission}",
            "    };",
            "",
            "    return (",
            "        <form onSubmit={handleSubmit} className=\"${4:form-class}\">",
            "            ${5:// Form fields}",
            "            <button type=\"submit\" className=\"${6:button-class}\">",
            "                ${7:Submit}",
            "            </button>",
            "        </form>",
            "    );",
            "};"
        ],
        "description": "React form component template"
    }
}
